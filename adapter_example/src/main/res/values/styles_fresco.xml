    <style name="fresco_circle">
        <item name="fadeDuration">300</item>
        <item name="actualImageScaleType">centerCrop</item>
        <item name="backgroundImage">@color/comm_transparent</item>
        <item name="placeholderImage">@drawable/comm_default_image</item>
        <item name="placeholderImageScaleType">centerCrop</item>
        <item name="failureImage">@drawable/comm_default_image</item>
        <item name="failureImageScaleType">centerCrop</item>
        <item name="retryImage">@drawable/comm_default_image</item>
        <item name="retryImageScaleType">centerCrop</item>
        <item name="overlayImage">@color/comm_transparent</item>
